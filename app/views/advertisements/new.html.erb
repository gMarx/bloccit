<div class="row">
  <div class="col-md-4">
    <p>Advertisements are created here</p>
  </div>

  <div class="col-md-8">
    <%= form_for @advertisement do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title  %>
      </div>
      <div class="form-group">
        <%= f.label :copy %>
        <%= f.text_area :copy, rows: 8, class: 'form-control', placeholder: 'Enter your copy...' %>
      </div>
      <div class="form-group">
        <%= f.label :price %>
        <%= f.number_field :price %>
      </div>
      <div class="form-group">
        <%= f.submit 'Save' %>
      </div>
    <% end %>
  </div>
</div>
