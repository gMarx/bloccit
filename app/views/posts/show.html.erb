<h1>
  <%= @post.title %> <br>
  Submitted <%= time_ago_in_words(@post.created_at) %> ago by <%= @post.user.name %>
</h1>

<div class="row">
  <div class="col-md-8">
    <p><%= @post.body %></p>
  </div>
  <div class="col-md-4">
    <ul class="nav nav-tabs">
      <li><%= link_to 'Back to Topic', @post.topic, class: 'pull-right' %></li>
      <% if user_is_authorized_to_edit?(@post) %>
        <li><%= link_to 'Edit', edit_topic_post_path(@post.topic, @post), class: 'btn btn-success' %></li>
      <% end %>
      <% if user_is_authorized_for_post?(@post) %>
        <li><%= link_to 'Delete Post', [@post.topic], method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this post?'} %></li>
      <% end %>
    </ul>
  </div>
</div>
